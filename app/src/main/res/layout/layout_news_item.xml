<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/cardview_light_background">


    <LinearLayout
        android:id="@+id/ll_tc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/news_title"
            android:layout_weight="3"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:text="第十三届全国人大三次会议举行第二次全体会议"
            android:textColor="#000"
            android:textSize="22sp">
        </TextView>
        <ImageView
            android:id="@+id/news_img"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/news_img_example">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wt"
        android:layout_below="@id/ll_tc"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/news_writer"
            android:layout_toLeftOf="@id/news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="writer:huangzexiao"
            android:textSize="16sp"
            android:textColor="@color/colorGrey">
        </TextView>
        <TextView
            android:id="@+id/news_time"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time:2020-01-01 12:00:00"
            android:textSize="16sp"
            android:textColor="@color/colorGrey">
        </TextView>
    </LinearLayout>

</RelativeLayout>